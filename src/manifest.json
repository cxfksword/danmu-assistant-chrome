{
    "manifest_version": 3,
    "name": "bilibili弹幕下载助手",
    "version": "0.1.0",
    "description": "下载B站的弹幕，合并电影字幕，并输出ass字幕文件",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "host_permissions": ["https://bilibili.com/", "https://api.bilibili.com/"],
    "action": {
        "default_title": "点击下载B站弹幕",
        "default_popup": "./popup/index.html",
        "default_icon": {
            "16": "/assets/icon/icon16.png",
            "32": "/assets/icon/icon32.png",
            "48": "/assets/icon/icon48.png",
            "64": "/assets/icon/icon64.png",
            "128": "/assets/icon/icon128.png"
        }
    },
    "icons": {
        "16": "/assets/icon/icon16.png",
        "32": "/assets/icon/icon32.png",
        "48": "/assets/icon/icon48.png",
        "64": "/assets/icon/icon64.png",
        "128": "/assets/icon/icon128.png"
    },
    "homepage_url": "https://github.com/cxfksword/danmu-assistant-chrome"
  }
  